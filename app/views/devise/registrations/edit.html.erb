<h2>Редактировать  профиль</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :login, "Логин" %><br />
    <%= f.text_field :login, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, "Имя" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :fullname, "Фамилия" %><br />
    <%= f.text_field :fullname %>
  </div>

  <div class="field">
    <%= f.label :phone, "Номер телефона" %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :birthdate, "Дата рождения" %><br />
    <%= f.date_select :birthdate, start_year: 1960 %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Все еще ожидаем подтверждения регистрации от: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(оставьте путым, если не хотите менять)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(введите текущий пароль для подтверждения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить" %>
  </div>
<% end %>

<h3>Удаление профиля</h3>

<p><%= button_to "Удалить мой профиль", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete %></p>

<%= link_to "Назад", :back %>
