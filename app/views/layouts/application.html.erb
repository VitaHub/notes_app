<!DOCTYPE html>
<html>
<head>
  <title>Заметки</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
	<%= render 'layouts/header' %>
	<div class="main">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% if notice.present? %>
					<aside class="alert alert-info"><%= notice %></aside>
				<% end %>
				<% if alert.present? %>
					<aside class="alert alert-danger"><%= alert %></aside>
				<% end %>
				<div class="main">
					<%= yield %>
				</div>
				<% if Rails.env.development? %>
					<%= debug(params) %>
				<% end %>
			</div>
		</div>
	</div>
	

	<%= render 'layouts/footer' %>
</body>
</html>
